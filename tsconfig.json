{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"removeComments": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"typeRoots": ["@types/declarations.d.ts", "./node_modules/@types"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/app/*": ["./app/*"],
			"@/public/*": ["./public/*"],
			"@/components/*": ["./components/*"],
			"@/theme/*": ["./theme/*"],
			"@/lib/*": ["./lib/*"],
			"@/mock/*": ["./mock/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".eslintrc.js",
		"**/*.js",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		".storybook/**/*.ts",
		".storybook/**/*.tsx",
		".storybook/**/*.js"
	],
	"exclude": ["node_modules", ".vscode", "storybook-static"]
}
